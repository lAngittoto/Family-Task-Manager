<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /Family_Task_Manager/Public/

    # Redirect root to /create-account (URL changes)
    RewriteRule ^$ create-account [R=302,L]

    # Allow existing files and folders
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Clean URLs â†’ index.php?page=route
    RewriteRule ^(.+)$ index.php?page=$1 [L,QSA]
</IfModule>
